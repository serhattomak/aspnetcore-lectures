@{
    ViewBag.Title = "Meeting Application Form";
}
<h1 class="h4 text-center">Meeting Apply Form</h1>
<form action="">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" name="Name" id="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label for="Phone" class="form-label">Phone</label>
        <input type="text" name="Phone" id="Phone" class="form-control">
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" name="Email" id="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label for="WillAttend" class="form-label">Attending Status</label>
        <select name="WillAttend" id="WillAttend" class="form-select">
            <option value="true">Will Attend</option>
            <option value="false">Will Not Attend</option>
        </select>
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
</form>