@model List<Course>

@foreach (var course in Model)
{
    <div class="card mb-3" id="course_@course.Id">
         <div class="row">
             <div class="col-md-4">
                    <img src="~/img/@course.Image" class="img-fluid rounded-start" alt="">
             </div>
             <div class="col-md-8">
                 <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text">@course.Description</p>
                </div>
             </div>
         </div>
    </div>
}